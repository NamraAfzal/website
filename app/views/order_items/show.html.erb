<div class="max-w-sm mx-auto">
  <div>
    <h2 class="text-4xl text-center font-extrabold dark:text-white">Pay Now</h2>
    <%= form_with url: checkout_order_path, data: { turbo: false } do |form| %>
      <% @order_items.each do |item| %>
        <%= form.hidden_field :order_item_ids, value: item.id %>
        <p class="text-2xl font-extra dark:text-white">Product: <%= item.product.name %></p>
        <p class="text-2xl font-extra dark:text-white">Quantity: <%= item.quantity %></p>
        <hr>
      <% end %>

      <div class="mb-5">
        <%= form.label :full_name, "Full Name", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= form.text_field :full_name, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", required: true %>
      </div>
      <div class="mb-5">
        <%= form.label :email, "Email", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= form.text_field :email, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", required: true %>
      </div>
      <div class="mb-5">
        <%= form.label :contact_number, "Contact Number", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= form.text_field :contact_number, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", required: true %>
      </div>

      <h4 class="text-xl font-bold text-center dark:text-white">Card Details</h4>
      <div class="mb-5">
        <%= form.label :card_number, "Card Number", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= form.text_field :card_number, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", required: true %>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <div class="mb-5">
            <%= form.label :cvc, "cvc", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= form.text_field :cvc, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", required: true, maxlength: 4 %>
          </div>
        </div>
        <div class="col-lg-3">
          <div class="mb-5">
            <%= form.label :exp_month, "Expiration Month", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= form.number_field :exp_month, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", required: true, min: 1, max: 12 %>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="mb-5">
            <%= form.label :exp_year, "Expiration Year", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= form.number_field :exp_year, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", required: true, min: 2025, max: 2028 %>
          </div>
        </div>
      </div>

      <div class="form-group mt-4">
        <%= form.submit "Complete Purchase", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
      </div>
    <% end %>
  </div>
</div>
