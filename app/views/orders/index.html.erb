<h1 class="text-2xl font-bold mb-4">Your Orders</h1>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-200">
      <thead>
        <tr>
          <th class="px-6 py-3 border-b border-gray-200 bg-gray-100 text-left text-sm font-semibold text-gray-700">Order Id</th>
          <th class="px-6 py-3 border-b border-gray-200 bg-gray-100 text-left text-sm font-semibold text-gray-700">status</th>
          <th class="px-6 py-3 border-b border-gray-200 bg-gray-100 text-left text-sm font-semibold text-gray-700">shipping Address</th>
          <th class="px-6 py-3 border-b border-gray-200 bg-gray-100 text-left text-sm font-semibold text-gray-700">Product Name</th>
          <th class="px-6 py-3 border-b border-gray-200 bg-gray-100 text-left text-sm font-semibold text-gray-700">Product Quantity</th>
          <th class="px-6 py-3 border-b border-gray-200 bg-gray-100 text-left text-sm font-semibold text-gray-700">Total Price</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 border-b border-gray-200 text-sm text-gray-800 font-medium"><%= order.id %></td>
            <td class="px-6 py-4 border-b border-gray-200 text-sm text-gray-800">
              <%= order.status.capitalize %></td>
            <td class="px-6 py-4 border-b border-gray-200 text-sm text-gray-800">
              <% if order.shipping_address.present? %>
              <div class="mb-4">
                <p class="text-gray-600"><%= order.shipping_address %></p>
              </div>
            <% else %>
              <div class="mb-4">
                <p class="text-sm text-red-500">No shipping address provided.</p>
              </div>
            <% end %></td>
            <% order.order_items.each do |item| %>
            <td class="px-6 py-4 border-b border-gray-200 text-sm text-gray-800"><%= item.product.name %></td>
            <td class="px-6 py-4 border-b border-gray-200 text-sm text-gray-800"><%= item.quantity %></td>
            <% end %>
            <td class="px-6 py-4 border-b border-gray-200 text-sm text-gray-800">Total: <%= number_to_currency(order.order_items.sum { |item| item.product.price * item.quantity }) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
