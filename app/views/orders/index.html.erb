<h1 class="text-2xl font-bold text-gray-800 mb-6">Your Orders</h1>

<div class="space-y-6">
  <% @orders.each do |order| %>
    <div class="p-6 bg-white rounded-lg shadow-md border border-gray-200">
      <h2 class="text-lg font-semibold text-gray-700 mb-4">
        Order #<span class="text-indigo-600"><%= order.id %></span> - 
        Status: <span class="capitalize <%= order.status == 'shipped' ? 'text-green-600' : 'text-yellow-500' %>">
          <%= order.status.capitalize %>
        </span>
      </h2>
      <ul class="list-disc pl-5 space-y-2">
        <% order.order_items.each do |item| %>
          <li class="text-gray-600">
            <span class="font-medium text-gray-800"><%= item.product.name %></span> - 
            Quantity: <span class="font-semibold"><%= item.quantity %></span>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
