<nav class="bg-gray-800">
    <div class="relative flex h-16 items-center justify-between">
      <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
        <button type="button" class="relative inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white" aria-controls="mobile-menu" aria-expanded="false">
          <span class="absolute -inset-0.5"></span>
          <span class="sr-only">Open main menu</span>
          

          <svg class="block size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
          
          <svg class="hidden size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
        <div class="flex shrink-0 items-center">
          <img class="h-8 w-auto" src="https://tailwindui.com/plus/img/logos/mark.svg?color=indigo&shade=500" alt="Your Company">
        </div>
        <%= link_to 'Shop', products_path, class: "text-white font-semibold text-lg" %>
      </div>
      <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
          <div class="hidden sm:ml-6 sm:block">
            <div class="flex space-x-4">
                <div class="flex items-center space-x-4">
                    <% if user_signed_in? %>
                    <%= link_to 'Orders', orders_path, class: 'text-white hover:text-gray-400' %>
                    <% end %>
                    <% if seller_signed_in? %>
                    <%= link_to 'Orders', sellers_orders_path, class: 'text-white hover:text-gray-400' %>
                    <% end %>
                    <% if current_user %>
                    <% cart = current_user.orders.find_by(status: :cart) %>
                    <% if cart %>
                    <li class="nav-item">
                      <%= link_to "Cart (#{cart.order_items.sum(:quantity) || 0})", order_path(cart), class: 'text-white hover:text-gray-400' %>
                    </li>
                    <% else %>
                    <li class="nav-item">
                      <%= link_to "Cart (0)", "#", class: 'text-white hover:text-gray-400' %>
                    </li>
                    <% end %>
                    <% end %>
                </div>
              <div class="relative group">
                <button class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white ">
                  Categories
                </button>
                <div class="absolute left-0 hidden group-hover:block hover:block bg-gray-800 text-white rounded-md shadow-lg w-48 mt-2 z-10">
                  <ul class="py-1">
                    <% Category.all.each do |category| %>
                    <li>
                      <%= link_to category.name, category_path(category), class: "block px-4 py-2 text-sm text-gray-300 hover:bg-gray-700 hover:text-white" %>
                    </li>
                    <% end %>
                  </ul>
                </div>
              </div>
              <%= link_to 'Products', products_path, class: "rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white" %>
            </div>
          </div>          
      </div>
      <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
        <% if user_signed_in? %>
        <%= link_to 'Log Out', destroy_user_session_path, data: { turbo_method: :delete }, class: "rounded-md px-3 py-2 text-sm font-semibold text-gray-300 hover:bg-gray-700 hover:text-white"%>
        <% elsif seller_signed_in? %>
        <%= link_to 'Log Out', destroy_seller_session_path, data: { turbo_method: :delete }, class: 'text-white hover:text-gray-400' %>
        <% else %>
        <%= link_to 'Log In', new_user_session_path, class: 'text-white hover:text-gray-400' %>
        <% end %>
          </div>
    </div>
