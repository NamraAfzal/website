<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css" rel="stylesheet" />
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
        <%= javascript_importmap_tags %>
  </head>

  <body>
    <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
    <% unless devise_controller? && controller_name == 'dashboard' && controller_path == 'sellers/dashboard' %>
    <%= render 'layouts/navbar' %>
    <% end %>
        <% if notice %>
      <div id="notice-alert" class="p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
        <span class="font-medium"><%= notice %></span>
      </div>
    <% end %>
    <% if alert %>
      <div id="alert-alert" class="p-4 mb-4 text-sm text-blue-800 rounded-lg bg-blue-50 dark:bg-gray-800 dark:text-blue-400" role="alert">
        <span class="font-medium"><%= alert %></span>
      </div>
    <% end %>
    <div class="container mx-auto p-6">
      <%= yield %>
    </div>
  </body>
</html>


<script>
  setTimeout(() => {
    const notice = document.getElementById('notice-alert');
    const alert = document.getElementById('alert-alert');

    if (notice) {
      notice.style.transition = "opacity 0.3s";
      notice.style.opacity = "0"; 
      setTimeout(() => notice.remove(), 300); 
    }

    if (alert) {
      alert.style.transition = "opacity 0.3s";
      alert.style.opacity = "0"; 
      setTimeout(() => alert.remove(), 300); 
    }
  }, 3000); 
</script>