<h1>Your Cart</h1>

<% if @cart.present? %>
  <div id="cart-count">
    Cart: <%= @cart.cart_items.count %> items
  </div>

  <div class="cart-items">
    <% if @cart.cart_items.any? %>
      <table>
        <thead>
          <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @cart.cart_items.each do |item| %>
            <tr>
              <td><%= item.product.name %></td>
              <td><%= item.quantity %></td>
              <td>$<%= item.product.price * item.quantity %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>Your cart is empty.</p>
    <% end %>
  </div>
<% else %>
  <p>Your cart is unavailable. Please try again later.</p>
<% end %>
