<h1>Your Cart</h1>

<div id="cart-count">
  Cart: <%= @cart.cart_items.count %> items
</div>

<div id="cart-items-table" class="cart-items">
  <% if @cart.cart_items.any? %>
    <table>
      <thead>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @cart.cart_items.each do |item| %>
          <tr>
            <td><%= item.product.name %></td>
            <td><%= item.quantity %></td>
            <td>$<%= item.product.price * item.quantity %></td>
            <td>
              <%= button_to 'Remove', remove_from_cart_cart_path(cart_id: @cart.id, product_id: item.product.id), method: :delete, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>Your cart is empty.</p>
  <% end %>
</div>
