<%= form_with(model: @product, url: form_url, method: form_method, class: "space-y-6") do |form| %>

  <div class="field">
    <%= form.label :name, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :name, class: "shadow-sm appearance-none border rounded-lg w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="field">
    <%= form.label :description, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_area :description, class: "shadow-sm appearance-none border rounded-lg w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="field">
    <%= form.label :price, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.number_field :price, class: "shadow-sm appearance-none border rounded-lg w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="field">
    <%= form.label :stock, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.number_field :stock, class: "shadow-sm appearance-none border rounded-lg w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500", min: 0 %>
  </div>
  

  <div class="field">
    <%= form.label :category_id, 'Category', class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: 'Select a Category' }, class: "shadow-sm appearance-none border rounded-lg w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="field">
    <%= form.label :image, 'Image', class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.file_field :image, required: true, class: "shadow-sm appearance-none border rounded-lg w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="actions flex justify-center top-right-btn">
    <%= form.submit submit_text, class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-6 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300" %>
  </div>

<% end %>
