<div class=" flex items-center justify-center bg-gray-50">
  <div class="bg-white shadow-md rounded-lg max-w-4xl p-6 lg:p-8">
    <h1 class="text-2xl lg:text-4xl font-bold text-gray-800 text-center mb-6"><%= @product.name %></h1>
    <div class="flex gap-6 lg:flex-row items-center">
      <% if @product.images.attached? %>
        <% @product.images.each do |image| %>
          <div class="rounded-lg overflow-hidden border border-gray-200 shadow-sm">
            <%= image_tag image, alt: @product.name, class: " h-48 object-cover" %>
          </div>
        <% end %>
      <% else %>
        <p class="text-gray-500 col-span-full text-center">No images available for this product.</p>
      <% end %>
    </div>

    <div class="mt-8 space-y-4">
      <p class="text-lg text-gray-700">
        <strong class="font-semibold">Category:</strong> <%= @product.category.name if @product.category %>
      </p>
      <p class="text-lg text-gray-700">
        <strong class="font-semibold">Description:</strong> <%= @product.description %>
      </p>
      <p class="text-lg text-gray-700">
        <strong class="font-semibold">Price:</strong> $<%= @product.price %>
      </p>
    </div>

    <div class="mt-6 flex justify-center space-x-4">
      <%= link_to 'Edit', edit_sellers_product_path(@product), class: "text-yellow-500 font-semibold hover:text-yellow-600 hover:underline" %>
      <span class="text-gray-400">|</span>
      <%= link_to 'Back to Products', sellers_products_path, class: "text-blue-500 font-semibold hover:text-blue-600 hover:underline" %>
    </div>
  </div>
</div>
