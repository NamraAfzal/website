<div class=" flex flex-col items-center justify-center bg-gray-50">
  <div class="flex flex-col items-center bg-white border border-gray-200 rounded-lg card shadow md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
    <div class="object-cover rounded-t-lg image md:rounded-none md:rounded-s-lg">
      <% if @product.image.attached? %>
        <div class="rounded-lg overflow-hidden border border-gray-200 shadow-sm">
          <%= image_tag url_for(@product.image), alt: @product.name, class: " h-48 object-cover" %>
        </div>
      <% end %>
    </div>
    
    <div class="mt-8 space-y-4">
      <h1 class="text-2xl lg:text-4xl font-bold text-gray-800 text-center mb-6"><%= @product.name %></h1>
      <p class="text-lg text-gray-700">
        <strong class="font-semibold">Category:</strong> <%= @product.category.name if @product.category %>
      </p>
      <p class="text-lg text-gray-700">
        <strong class="font-semibold">Description:</strong><%= @product.description %>
      </p>
      <p class="text-lg text-gray-700">
        <strong class="font-semibold">Stock:</strong>
        <% if @product.stock > 0 %>
          <span style="color: green;"><%= @product.stock %> available</span>
        <% else %>
          <span style="color: red;">Out of Stock</span>
        <% end %>
      </p>
      <p class="text-lg text-gray-700">
        <strong class="font-semibold">Price:</strong> $<%= @product.price %>
      </p>
    </div>

    <div class="top-right-btn text-white py-2 px-4 rounded">
      <%= link_to 'Edit', edit_sellers_product_path(@product), class:"text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
      <span class="text-gray-400"></span>
      <%= link_to 'Back to Products', sellers_products_path, class: "text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700" %>
    </div>
  </div>
</div>
