<h1 class="text-2xl font-bold text-gray-800 mb-6">Your Orders</h1>

<div class="overflow-x-auto bg-white shadow-md rounded-lg">
  <table class="min-w-full border border-gray-300 rounded-lg">
    <thead class="bg-blue-50 text-gray-700 uppercase text-sm">
      <tr class="hover:bg-gray-50 cursor-pointer" onclick="window.location='<%= orders_path %>'">
        <th class="px-6 py-3 border-b border-gray-300 text-left">Order ID</th>  
        <th class="px-6 py-3 border-b border-gray-300 text-center">Total Amount</th>
        <th class="px-6 py-3 border-b border-gray-300 text-left">Status</th>
        <th class="px-6 py-3 border-b border-gray-300 text-center">Action</th>
        <th class="px-6 py-3 border-b border-gray-300 text-center">View</th>
      </tr>
    </thead>
    <tbody class="bg-white text-gray-700 divide-y divide-gray-200">
      <% @orders.each do |order| %>
        <%= turbo_frame_tag "order_#{order.id}" do %>
          <%= render partial: "sellers/orders/order", locals: { order: order } %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
