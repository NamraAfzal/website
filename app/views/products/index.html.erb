<h1 class="text-2xl font-bold mb-4">Products</h1>

<% if params[:category].present? %>
  <% category = params[:category].to_i %>
  <div class="bg-white">
    <div class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">
      <div class="mt-6 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
        <% Product.where(category_id: category).each do |product| %>
          <div class="group relative border border-gray-200 rounded-lg shadow-md hover:shadow-lg transition-shadow bg-white">
            <div class="overflow-hidden rounded-t-lg bg-gray-100">
              <% if product.images.attached? %>
                <%= image_tag product.images.first, alt: product.name, class: "h-48 w-full object-cover object-center" %>
              <% else %>
                <div class="h-48 flex items-center justify-center text-gray-500 text-sm">
                  No Image Available
                </div>
              <% end %>
            </div>
          
            <div class="p-4">
              <h3 class="text-sm font-medium text-gray-700 truncate">
                <a href="#">
                  <span aria-hidden="true" class="absolute inset-0"></span>
                  <%= product.name %>
                </a>
              </h3>
              <p class="mt-2 text-sm text-gray-500"><%= truncate(product.description, length: 60) %></p>
              <p class="mt-4 text-lg font-semibold text-gray-900">$<%= product.price %></p>
              <p class="mt-4 text-lg font-medium text-gray-900">Stock: <%= product.stock.presence || "N/A" %></p>
            </div>
          
            <div class="absolute inset-0 z-10 flex items-center justify-center bg-gray-800 bg-opacity-75 text-white opacity-0 group-hover:opacity-100 transition-opacity">
              <a href="<%= product_path(product) %>" class="text-center text-sm font-medium px-4 py-2 bg-indigo-600 hover:bg-indigo-700 rounded-md">
                View Details
              </a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
    <div class="bg-white">
      <div class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold tracking-tight text-gray-900">Customers also purchased</h2>
      
        <div class="mt-6 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
          <% Product.all.each do |product| %>
            <div class="group relative border border-gray-200 rounded-lg shadow-md hover:shadow-lg transition-shadow bg-white">
              <div class="overflow-hidden rounded-t-lg bg-gray-100">
                <% if product.images.attached? %>
                  <%= image_tag product.images.first, alt: product.name, class: "h-48 w-full object-cover object-center" %>
                <% else %>
                  <div class="h-48 flex items-center justify-center text-gray-500 text-sm">
                    No Image Available
                  </div>
                <% end %>
              </div>
            
              <div class="p-4">
                <h3 class="text-sm font-medium text-gray-700 truncate">
                  <a href="#">
                    <span aria-hidden="true" class="absolute inset-0"></span>
                    <%= product.name %>
                  </a>
                </h3>
                <p class="mt-2 text-sm text-gray-500"><%= truncate(product.description, length: 60) %></p>
                <p class="mt-4 text-lg font-semibold text-gray-900">$<%= product.price %></p>
                <p class="mt-4 text-lg font-medium text-gray-900">Stock: <%= product.stock.presence || "N/A" %></p>
              </div>
            
              <div class="absolute inset-0 z-10 flex items-center justify-center bg-gray-800 bg-opacity-75 text-white opacity-0 group-hover:opacity-100 transition-opacity">
                <a href="<%= product_path(product) %>" class="text-center text-sm font-medium px-4 py-2 bg-indigo-600 hover:bg-indigo-700 rounded-md">
                  View Details
                </a>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

<% end %>
