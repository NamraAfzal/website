<h1 class="text-2xl font-bold mb-4">Products</h1>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-200">
      <thead>
        <tr>
          <th class="px-6 py-3 border-b border-gray-200 bg-gray-100 text-left text-sm font-semibold text-gray-700">Name</th>
          <th class="px-6 py-3 border-b border-gray-200 bg-gray-100 text-left text-sm font-semibold text-gray-700">Category</th>
          <th class="px-6 py-3 border-b border-gray-200 bg-gray-100 text-left text-sm font-semibold text-gray-700">Price</th>
        </tr>
      </thead>
      <tbody>
        <% category = params[:category].to_i %>
        <% Product.where(category_id: category).each do |product| %>
          <tr class="hover:bg-gray-50 cursor-pointer" onclick="window.location='<%= product_path(product) %>'">
            <td class="px-6 py-4 border-b border-gray-200 text-sm text-gray-800 font-medium"><%= product.name %></td>
            <td class="px-6 py-4 border-b border-gray-200 text-sm text-gray-800"><%= product.category&.name || 'N/A' %></td>
            <td class="px-6 py-4 border-b border-gray-200 text-sm text-gray-800">$<%= product.price %></td>
          </tr>
        <% end %>
      </tbody>          
    </table>
  </div>
  